<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:dxgt="clr-namespace:DevExpress.Xpf.Grid.Themes"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <ControlTemplate x:Key="{dxgt:LookUpEditThemeKey ResourceKey=PopupTopAreaBackgroundPanelTemplate}"
                   TargetType="{x:Type ContentControl}">
    <Border BorderThickness="0,0,0,1" BorderBrush="#FF062B63">
      <ContentPresenter Content="{TemplateBinding ContentControl.Content}" Margin="{TemplateBinding Control.Padding}"/>
    </Border>
  </ControlTemplate>
</ResourceDictionary>