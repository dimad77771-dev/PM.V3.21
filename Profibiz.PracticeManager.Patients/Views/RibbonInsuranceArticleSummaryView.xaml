                                        </DataTemplate>
                                    </dxe:ComboBoxEditSettings.ItemTemplate>
                                    <dxe:ComboBoxEditSettings.EditNonEditableTemplate>
                                        <ControlTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Image Margin="5"
