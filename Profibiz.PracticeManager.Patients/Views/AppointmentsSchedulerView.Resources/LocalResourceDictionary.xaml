    <dxmvvm:ObjectToObjectConverter x:Key="SelectionToBorderColorConverter">
        <dxmvvm:MapItem Source="False" Target="Black" />
        <dxmvvm:MapItem Source="True" Target="Brown" />
    </dxmvvm:ObjectToObjectConverter>
    <dxmvvm:ObjectToObjectConverter x:Key="DoctorSelectionToBorderThicknessConverter">
        <dxmvvm:MapItem Source="False" Target="1" />
        <dxmvvm:MapItem Source="True" Target="2" />
    </dxmvvm:ObjectToObjectConverter>


    <DataTemplate x:Key="AppointmentTooltipContentTemplate">
        <DataTemplate.Resources>
            <Style x:Key="editStyle1" TargetType="dxe:BaseEdit">
                <Style.Setters>
                    <Setter Property="Margin" Value="2" />
                </Style.Setters>
            </Style>
        </DataTemplate.Resources>
        <Border
            x:Name="borderAppointmentTooltip"
            Width="500"
            Background="White"
            BorderBrush="Black"
            BorderThickness="1"
            CornerRadius="10">
            <Grid Grid.Row="0" Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>


                <dxlc:LayoutItemLabel
                    Grid.Row="0"
                    Grid.Column="0"
                    Content="Appointment Book"
                    Style="{StaticResource layoutItemLabelStyle1Left}" />
                <dxe:TextEdit
                    Grid.Row="0"
                    Grid.Column="1"
                    Grid.ColumnSpan="3"
                    EditValue="{Binding Path=CustomViewInfo.AppointmentBook.Name}"
                    FontWeight="Bold"
                    IsReadOnly="True"
                    Style="{StaticResource editStyle1}" />


                <dxlc:LayoutItemLabel
                    Grid.Row="1"
                    Grid.Column="0"
                    Content="Start/Finish Time"
                    Style="{StaticResource layoutItemLabelStyle1Left}" />
                <dxe:TextEdit
                    Grid.Row="1"
                    Grid.Column="1"
                    EditValue="{Binding CustomViewInfo.StartEndDateString, Mode=OneWay}"
                    IsReadOnly="True"
                    Style="{StaticResource editStyle1}" />
                <dxlc:LayoutItemLabel
                    Grid.Row="1"
                    Grid.Column="2"
                    Content="Date"
                    Style="{StaticResource layoutItemLabelStyle1Left}" />
                <dxe:TextEdit
                    Grid.Row="1"
                    Grid.Column="3"
                    DisplayFormatString="d"
                    EditValue="{Binding CustomViewInfo.StartDate}"
                    IsReadOnly="True"
                    Style="{StaticResource editStyle1}" />

                <dxlc:LayoutItemLabel
                    Grid.Row="2"
                    Grid.Column="0"
                    Content="Patient"
                    Style="{StaticResource layoutItemLabelStyle1Left}" />
                <dxe:TextEdit
                    Grid.Row="2"
                    Grid.Column="1"
                    EditValue="{Binding CustomViewInfo.PatientName}"
                    IsReadOnly="True"
                    Style="{StaticResource editStyle1}" />
                <dxlc:LayoutItemLabel
                    Grid.Row="2"
                    Grid.Column="2"
                    Content="Phone"
                    Style="{StaticResource layoutItemLabelStyle1Left}" />
                <dxe:TextEdit
                    Grid.Row="2"
                    Grid.Column="3"
                    EditValue="{Binding CustomViewInfo.Entity.ContactPhone, Mode=OneWay}"
                    IsReadOnly="True"
                    Style="{StaticResource editStyle1}" />

                <dxlc:LayoutItemLabel
                    Grid.Row="3"
                    Grid.Column="0"
                    Content="Insurance Coverage"
                    Style="{StaticResource layoutItemLabelStyle1Left}" />
                <dxe:TextEdit
                    Grid.Row="3"
                    Grid.Column="1"
                    Grid.ColumnSpan="3"
                    EditValue="{Binding CustomViewInfo.Entity.PolicyFullName, Mode=OneWay}"
                    IsReadOnly="True"
                    Style="{StaticResource editStyle1}"
                    Visibility="{Binding CustomViewInfo.Entity.HasNoCoverage, Converter={StaticResource BooleanToVisibilityInverseWithHiddenConverter}}" />
                <dxlc:LayoutItemLabel
                    Grid.Row="3"
                    Grid.Column="1"
                    Grid.ColumnSpan="3"
                    Margin="6,4"
                    FontStyle="Italic"
                    Style="{StaticResource layoutItemLabelStyle1Left}"
                    Visibility="{Binding CustomViewInfo.Entity.HasNoCoverage, Converter={StaticResource BooleanToVisibilityWithHiddenConverter}}">
                    <TextBlock FontWeight="Bold">No Insurance Coverage</TextBlock>
                </dxlc:LayoutItemLabel>

                <dxlc:LayoutItemLabel
                    Grid.Row="4"
                    Grid.Column="0"
                    Content="Specialist"
                    Style="{StaticResource layoutItemLabelStyle1Left}" />
                <dxe:TextEdit
                    Grid.Row="4"
                    Grid.Column="1"
                    Grid.ColumnSpan="3"
                    EditValue="{Binding CustomViewInfo.Doctor.Name}"
                    IsReadOnly="True"
                    Style="{StaticResource editStyle1}" />

                <dxlc:LayoutItemLabel
                    Grid.Row="5"
                    Grid.Column="0"
                    Content="Service"
                    Style="{StaticResource layoutItemLabelStyle1Left}" />
                <dxe:TextEdit
                    Grid.Row="5"
                    Grid.Column="1"
                    Grid.ColumnSpan="3"
                    EditValue="{Binding CustomViewInfo.MedicalServicesOrSupply.FullName, Mode=OneWay}"
                    IsReadOnly="True"
                    Style="{StaticResource editStyle1}" />

                <dxlc:LayoutItemLabel
                    Grid.Row="6"
                    Grid.Column="0"
                    Content="Completed"
                    Style="{StaticResource layoutItemLabelStyle1Left}" />
                <dxe:CheckEdit
                    Grid.Row="6"
                    Grid.Column="1"
                    Grid.ColumnSpan="1"
                    Margin="2"
                    IsChecked="{Binding CustomViewInfo.Entity.Completed, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnExceptions=True}"
                    IsReadOnly="True" />
                <dxlc:LayoutItemLabel
                    Grid.Row="6"
                    Grid.Column="2"
                    Content="Billed"
                    Style="{StaticResource layoutItemLabelStyle1Left}" />
                <dxe:CheckEdit
                    Grid.Row="6"
                    Grid.Column="3"
                    Grid.ColumnSpan="1"
                    Margin="2"
                    IsChecked="{Binding CustomViewInfo.Entity.InInvoice, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnExceptions=True}"
                    IsReadOnly="True" />

                <dxlc:LayoutItemLabel
                    Grid.Row="7"
                    Grid.Column="0"
                    Content="Notes"
                    Style="{StaticResource layoutItemLabelStyle1Left}" />
                <dxe:TextEdit
                    Grid.Row="7"
                    Grid.Column="1"
                    Grid.ColumnSpan="3"
                    Height="80"
                    VerticalContentAlignment="Top"
                    AcceptsReturn="True"
                    EditValue="{Binding CustomViewInfo.Notes}"
                    IsReadOnly="True"
                    Style="{StaticResource editStyle1}"
                    TextWrapping="Wrap"
                    VerticalScrollBarVisibility="Auto" />

                <dxlc:LayoutItemLabel
                    Grid.Row="8"
                    Grid.Column="0"
                    Content="Statuses"
                    Style="{StaticResource layoutItemLabelStyle1Left}" />
                <Grid
                    Grid.Row="8"
                    Grid.Column="1"
                    Grid.ColumnSpan="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Border
                        Grid.Column="0"
                        Margin="5"
                        Background="{Binding CustomViewInfo.Entity.Status1RowId, Converter={StaticResource AppointmentStatusToColorConverter}, ConverterParameter=Background}"
                        BorderBrush="Black"
                        BorderThickness="1"
                        Visibility="{Binding CustomViewInfo.Entity.Status1RowId, Converter={StaticResource AppointmentStatusToColorConverter}, ConverterParameter=Visibility}">
                        <TextBlock
                            Padding="5"
                            Foreground="{Binding CustomViewInfo.Entity.Status1RowId, Converter={StaticResource AppointmentStatusToColorConverter}, ConverterParameter=Foreground}"
                            Text="{Binding CustomViewInfo.Entity.Status1RowId, Converter={StaticResource AppointmentStatusToColorConverter}, ConverterParameter=Text}" />
                    </Border>
                    <Border
                        Grid.Column="1"
                        Margin="5"
                        Background="{Binding CustomViewInfo.Entity.Status2RowId, Converter={StaticResource AppointmentStatusToColorConverter}, ConverterParameter=Background}"
                        BorderBrush="Black"
                        BorderThickness="1"
                        Visibility="{Binding CustomViewInfo.Entity.Status2RowId, Converter={StaticResource AppointmentStatusToColorConverter}, ConverterParameter=Visibility2}">

                        <TextBlock
                            Padding="5"
                            Foreground="{Binding CustomViewInfo.Entity.Status2RowId, Converter={StaticResource AppointmentStatusToColorConverter}, ConverterParameter=Foreground}"
                            Text="{Binding CustomViewInfo.Entity.Status2RowId, Converter={StaticResource AppointmentStatusToColorConverter}, ConverterParameter=Text}" />
                    </Border>
                </Grid>
            </Grid>
        </Border>
    </DataTemplate>

