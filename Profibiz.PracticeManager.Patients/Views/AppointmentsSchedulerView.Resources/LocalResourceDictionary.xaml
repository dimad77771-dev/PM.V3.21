    <DataTemplate x:Key="HorizontalAppointmentLongerThanADayContentTemplate">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <dxschi:AppointmentContinueStartDateControl
                Grid.Column="0"
                Margin="2,0,0,0"
                ViewInfo="{Binding}">
                <dxschi:AppointmentContinueStartDateControl.Resources>
                    <Style TargetType="{x:Type TextBlock}">
                        <Setter Property="FontSize" Value="10" />
                    </Style>
                </dxschi:AppointmentContinueStartDateControl.Resources>
            </dxschi:AppointmentContinueStartDateControl>
            <dxschi:HorizontalAppointmentStartClockControl
                Grid.Column="0"
                Margin="2,0,0,0"
                ViewInfo="{Binding}">
                <dxschi:HorizontalAppointmentStartClockControl.Resources>
                    <Style TargetType="{x:Type TextBlock}">
                        <Setter Property="FontSize" Value="10" />
                    </Style>
                </dxschi:HorizontalAppointmentStartClockControl.Resources>
            </dxschi:HorizontalAppointmentStartClockControl>
            <StackPanel
                Grid.Column="1"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock Text="{Binding Subject}" />
                <TextBlock Text="/" />
                <TextBlock Text="{Binding Location}" />
            </StackPanel>
            <dxschi:AppointmentContinueEndDateControl
                Grid.Column="2"
                Margin="2,0,0,0"
                ViewInfo="{Binding}">
                <dxschi:AppointmentContinueEndDateControl.Resources>
                    <Style TargetType="{x:Type TextBlock}">
                        <Setter Property="FontSize" Value="10" />
                    </Style>
                </dxschi:AppointmentContinueEndDateControl.Resources>
            </dxschi:AppointmentContinueEndDateControl>
            <dxschi:HorizontalAppointmentEndClockControl
                Grid.Column="2"
                Margin="2,0,0,0"
                ViewInfo="{Binding}">
                <dxschi:HorizontalAppointmentEndClockControl.Resources>
                    <Style TargetType="{x:Type TextBlock}">
                        <Setter Property="FontSize" Value="10" />
                    </Style>
                </dxschi:HorizontalAppointmentEndClockControl.Resources>
            </dxschi:HorizontalAppointmentEndClockControl>
        </Grid>
    </DataTemplate>

    <ControlTemplate x:Key="HorizontalAppointmentTemplate" TargetType="{x:Type dxschi:VisualHorizontalAppointmentControl}">
        <Grid x:Name="PART_AppointmentVisualStateManagerHolder">

            <ToolTipService.ToolTip>
                <ToolTip Content="{TemplateBinding ViewInfo}" ContentTemplate="{Binding ViewInfo.View.AppointmentToolTipContentTemplate, RelativeSource={RelativeSource TemplatedParent}}" />
            </ToolTipService.ToolTip>

            <Border
                x:Name="brdrContent"
                dxsch:SchedulerControl.HitTestType="AppointmentContent"
                dxsch:SchedulerControl.SelectableIntervalViewInfo="{TemplateBinding ViewInfo}"
                Background="{Binding ViewInfo.CustomViewInfo, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource DoctorToColorConverter}, ConverterParameter=Background}"
                BorderThickness="{Binding ViewInfo.CustomViewInfo.Doctor.IsSelected, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource DoctorSelectionToBorderThicknessConverter}}"
                CornerRadius="5"
                Opacity="1">
                <Border.BorderBrush>
                    <MultiBinding Converter="{StaticResource AppointmentBorderColorConverter}">
                        <Binding Path="ViewInfo.Selected" RelativeSource="{RelativeSource TemplatedParent}" />
                        <Binding Path="ViewInfo.CustomViewInfo.Doctor.IsSelected" RelativeSource="{RelativeSource TemplatedParent}" />
                        <Binding Path="ViewInfo.CustomViewInfo.InsuranceProvider.IsSelected" RelativeSource="{RelativeSource TemplatedParent}" />
                    </MultiBinding>
                </Border.BorderBrush>
            </Border>


            <!--<Border x:Name="brdrContent"
                    BorderBrush="{Binding ViewInfo.Selected,
                                          RelativeSource={RelativeSource TemplatedParent},
                                          Converter={StaticResource SelectionToBorderColorConverter}}"
                    dxsch:SchedulerControl.HitTestType="AppointmentContent"
                    dxsch:SchedulerControl.SelectableIntervalViewInfo="{TemplateBinding ViewInfo}"
                    Background="{Binding ViewInfo.CustomViewInfo,
                                         RelativeSource={RelativeSource TemplatedParent},
                                         Converter={StaticResource DoctorToColorConverter},
                                         ConverterParameter=Background}"
                    BorderThickness="{Binding ViewInfo.CustomViewInfo.Doctor.IsSelected,
                                              RelativeSource={RelativeSource TemplatedParent},
                                              Converter={StaticResource DoctorSelectionToBorderThicknessConverter}}"
                    CornerRadius="5"
                    Opacity="1">
            </Border>-->


            <ContentPresenter
                x:Name="PART_Content"
                Margin="3"
                Content="{TemplateBinding ViewInfo}"
                ContentTemplate="{TemplateBinding ContentTemplate}" />

            <Rectangle
                Width="5"
                HorizontalAlignment="Left"
                dxsch:SchedulerControl.HitTestType="AppointmentResizingLeftEdge"
                dxsch:SchedulerControl.SelectableIntervalViewInfo="{TemplateBinding ViewInfo}"
                Cursor="SizeWE"
                Fill="Transparent"
                IsHitTestVisible="True"
                Visibility="{Binding Path=ViewInfo.HasLeftBorder, RelativeSource={RelativeSource TemplatedParent}, Converter={dxschi:BoolToVisibilityConverter}}" />
            <Rectangle
                Width="5"
                HorizontalAlignment="Right"
                dxsch:SchedulerControl.HitTestType="AppointmentResizingRightEdge"
                dxsch:SchedulerControl.SelectableIntervalViewInfo="{TemplateBinding ViewInfo}"
                Cursor="SizeWE"
                Fill="Transparent"
                IsHitTestVisible="True"
                Visibility="{Binding Path=ViewInfo.HasRightBorder, RelativeSource={RelativeSource TemplatedParent}, Converter={dxschi:BoolToVisibilityConverter}}" />
        </Grid>
    </ControlTemplate>

    <Style x:Key="HorizontalAppointmentSameDayStyle" TargetType="{x:Type dxschi:VisualHorizontalAppointmentControl}">
        <Setter Property="Template" Value="{StaticResource ResourceKey=HorizontalAppointmentTemplate}" />
        <Setter Property="ContentTemplate" Value="{StaticResource ResourceKey=HorizontalAppointmentSameDayContentTemplate}" />
    </Style>

    <Style x:Key="HorizontalAppointmentLongerThanADayStyle" TargetType="{x:Type dxschi:VisualHorizontalAppointmentControl}">
        <Setter Property="Template" Value="{StaticResource ResourceKey=HorizontalAppointmentTemplate}" />
        <Setter Property="ContentTemplate" Value="{StaticResource ResourceKey=HorizontalAppointmentLongerThanADayContentTemplate}" />
    </Style>

    <dxschi:HorizontalAppointmentStyleSelector x:Key="HorizontalAppointmentStyleSelector">
        <dxschi:HorizontalAppointmentStyleSelector.Properties>
            <dxschi:HorizontalAppointmentStyleSelectorProperties HorizontalAppointmentLongerThanADay="{StaticResource ResourceKey=HorizontalAppointmentLongerThanADayStyle}" HorizontalAppointmentSameDay="{StaticResource ResourceKey=HorizontalAppointmentSameDayStyle}" />
        </dxschi:HorizontalAppointmentStyleSelector.Properties>
    </dxschi:HorizontalAppointmentStyleSelector>

    <DataTemplate x:Key="VerticalAppointmentContentTemplate">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Border
                Grid.Column="0"
                Width="9"
                Margin="0,2,1,2"
                Background="{Binding CustomViewInfo.Entity.Status1RowId, Converter={StaticResource AppointmentStatusToColorConverter}, ConverterParameter=Background}"
                BorderBrush="Black"
                BorderThickness="1"
                Visibility="{Binding CustomViewInfo.Entity.Status1RowId, Converter={StaticResource AppointmentStatusToColorConverter}, ConverterParameter=Visibility}" />
            <Border
                Grid.Column="1"
                Width="9"
                Margin="0,2,1,2"
                Background="{Binding CustomViewInfo.Entity.Status2RowId, Converter={StaticResource AppointmentStatusToColorConverter}, ConverterParameter=Background}"
                BorderBrush="Black"
                BorderThickness="1"
                Visibility="{Binding CustomViewInfo.Entity.Status2RowId, Converter={StaticResource AppointmentStatusToColorConverter}, ConverterParameter=Visibility2}" />

            <Grid Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <!--<Grid.RowDefinitions>
                    <RowDefinition Height="AUTO" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>-->

                <!--<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">-->

                <dxschi:VerticalAppointmentClockControl
                    Grid.Column="0"
                    Margin="0,0,3,0"
                    ViewInfo="{Binding}" />
                <TextBlock
                    Grid.Column="1"
                    Background="Transparent"
                    FontStyle="{Binding CustomViewInfo, Converter={StaticResource AppointmentItemTextFontStyleConverter}}"
                    FontWeight="Bold"
                    Foreground="{Binding CustomViewInfo, Converter={StaticResource DoctorToColorConverter}, ConverterParameter=Foreground}"
                    Text="{Binding CustomViewInfo, Converter={StaticResource AppointmentItemTextConverter}}"
                    TextAlignment="Left"
                    TextTrimming="CharacterEllipsis"
                    TextWrapping="WrapWithOverflow" />
                <!--
                    TextDecorations="{Binding CustomViewInfo,
                    Converter={StaticResource AppointmentItemTextDecorationConverter}}"
                -->
                <!--</StackPanel>-->

                <!--<TextBlock Grid.Row="1" Text="{Binding Description}" />-->
            </Grid>


            <Border
                Grid.Column="3"
                Margin="1,0,0,0"
                Padding="1"
                Background="Black"
                BorderBrush="Red"
                BorderThickness="1"
                CornerRadius="3"
                Visibility="{Binding CustomViewInfo, Converter={StaticResource AppointmentItemInsuranceInfoVisibleConverter}}">
                <ContentControl Width="{x:Static infrastructure:WidthInfo.InsuranceCodeInAppointment}">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Foreground="White"
                        Text="{Binding CustomViewInfo, Converter={StaticResource AppointmentItemInsuranceInfoConverter}}" />
                    <!--
                        Foreground="{Binding CustomViewInfo,
                        Converter={StaticResource DoctorToColorConverter},
                        ConverterParameter=Foreground}"
                    -->
                </ContentControl>
            </Border>

        </Grid>
    </DataTemplate>

