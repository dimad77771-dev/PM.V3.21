    xmlns:infrastructure="clr-namespace:Profibiz.PracticeManager.Infrastructure;assembly=Profibiz.PracticeManager.Infrastructure"
    xmlns:local="clr-namespace:Profibiz.PracticeManager.Patients.ViewModels"
    xmlns:sys="clr-namespace:System;assembly=mscorlib">


    <local:DoctorToColorConverter x:Key="DoctorToColorConverter" />
    <local:AppointmentStatusToColorConverter x:Key="AppointmentStatusToColorConverter" />
    <local:AppointmentBorderColorConverter x:Key="AppointmentBorderColorConverter" />
    <local:AppointmentItemTextConverter x:Key="AppointmentItemTextConverter" />
    <local:AppointmentItemInsuranceInfoConverter x:Key="AppointmentItemInsuranceInfoConverter" />
    <local:AppointmentItemInsuranceInfoVisibleConverter x:Key="AppointmentItemInsuranceInfoVisibleConverter" />
    <local:AppointmentItemTextDecorationConverter x:Key="AppointmentItemTextDecorationConverter" />
    <local:AppointmentItemTextFontStyleConverter x:Key="AppointmentItemTextFontStyleConverter" />
	<local:AppointmentVisualTimeCellToolTipConverter x:Key="AppointmentVisualTimeCellToolTipConverter" />
	<local:AppointmentVisualTimeCellBackgroundConverter x:Key="AppointmentVisualTimeCellBackgroundConverter" />

