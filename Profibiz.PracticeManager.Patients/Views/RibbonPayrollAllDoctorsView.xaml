                                             IsGroupCaptionVisible="False"
                                             SizeMode="None">
                                    <dxb:GalleryItemGroup ItemsSource="{Binding RibbonSpAccountAgingListItems}" ItemTemplate="{StaticResource galleryItemSpecialistListTemplate}" />
